[gd_scene load_steps=5 format=2]

[ext_resource path="res://Title.tscn" type="PackedScene" id=1]
[ext_resource path="res://ResourceLabel.tscn" type="PackedScene" id=2]
[ext_resource path="res://Resource.tscn" type="PackedScene" id=3]
[ext_resource path="res://Population.cs" type="Script" id=4]

[node name="Control" type="Control"]
anchor_right = 1.0
anchor_bottom = 1.0

[node name="TickTimer" type="Timer" parent="."]
wait_time = 0.1
autostart = true

[node name="TitleCenterContainer" parent="." instance=ExtResource( 1 )]

[node name="ResourceLabelsGridContainer" type="GridContainer" parent="."]
margin_top = 40.0
margin_right = 1022.0
margin_bottom = 80.0
columns = 2

[node name="LandResourceLabel" parent="ResourceLabelsGridContainer" instance=ExtResource( 2 )]
margin_right = 0.0
resourceName = "Land"

[node name="FoodResourceLabel" parent="ResourceLabelsGridContainer" instance=ExtResource( 2 )]
margin_left = 4.0
margin_right = 4.0
resourceName = "Food"

[node name="Resources" type="Node" parent="."]

[node name="LandResource" parent="Resources" instance=ExtResource( 3 )]
resourceName = "Land"
productionPerWorker = 1.0
numberOfWorkers = 1

[node name="FoodResource" parent="Resources" instance=ExtResource( 3 )]
resourceName = "Food"
productionPerWorker = 0.5
numberOfWorkers = 1

[node name="Population" type="Node" parent="."]
script = ExtResource( 4 )

[connection signal="timeout" from="TickTimer" to="Resources/LandResource" method="_on_TickTimer_timeout"]
[connection signal="timeout" from="TickTimer" to="Resources/FoodResource" method="_on_TickTimer_timeout"]
[connection signal="ResourceAmountChangedEventHandler" from="Resources/LandResource" to="ResourceLabelsGridContainer/LandResourceLabel" method="OnResourceAmountChanged"]
[connection signal="ResourceAmountChangedEventHandler" from="Resources/FoodResource" to="ResourceLabelsGridContainer/FoodResourceLabel" method="OnResourceAmountChanged"]
